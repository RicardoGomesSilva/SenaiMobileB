<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.senai.sp.informatica.projetofilmes.view.LoginActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="276dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="9dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtInputLayoutLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.30">

            <EditText
                android:id="@+id/txtLogin"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:hint="Login"
                android:maxLines="1"
                android:text="aaa"
                android:textColorLink="@android:color/holo_blue_dark"
                tools:inputType="textPassword"
                tools:password="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtInputLayoutSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.43">

            <EditText
                android:id="@+id/txtSenha"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Password"
                tools:inputType="textPassword"
                android:maxLines="1"
                android:text="111"
                android:textColorLink="@android:color/holo_blue_dark"
                tools:password="true" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnEntrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickEntrar"
            android:text="Entrar"
            android:layout_weight="0.11"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="58dp"
        android:layout_height="20dp"
        android:layout_weight="0.26"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/txtLembrete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaa 111" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
